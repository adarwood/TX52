<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#e2941c"
                android:centerColor="#ecb23a"
                android:endColor="#e2941c"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#482803" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
			<size
				android:height="150dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#d87516"
                android:centerColor="#e5962e"
                android:endColor="#d87516"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#482803" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
			<size
				android:height="150dp" />
        </shape>
    </item>
</selector>
